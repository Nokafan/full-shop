<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>productBuyer</servlet-name>
        <servlet-class>com.internet.shop.controllers.buy.AddProductToCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productBuyer</servlet-name>
        <url-pattern>/products/buy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productFromCartRemover</servlet-name>
        <servlet-class>com.internet.shop.controllers.cart.admin.DeleteProductFromCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productFromCartRemover</servlet-name>
        <url-pattern>/cart/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartUserAdminController</servlet-name>
        <servlet-class>com.internet.shop.controllers.cart.admin.GetUserShoppingCartAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartUserAdminController</servlet-name>
        <url-pattern>/carts/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>cartUserController</servlet-name>
        <servlet-class>com.internet.shop.controllers.cart.user.GetUserShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>cartUserController</servlet-name>
        <url-pattern>/carts/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderCreator</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.user.PreviewOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderCreator</servlet-name>
        <url-pattern>/order/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderConfirmer</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.user.ConfirmOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderConfirmer</servlet-name>
        <url-pattern>/order/confirm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderRemover</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.admin.DeleteOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderRemover</servlet-name>
        <url-pattern>/order/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderAdminController</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.admin.GetAllOrdersAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderAdminController</servlet-name>
        <url-pattern>/orders/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderController</servlet-name>
        <servlet-class>com.internet.shop.controllers.order.user.GetUserOrdersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderController</servlet-name>
        <url-pattern>/orders/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productSupplier</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.admin.AddProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productSupplier</servlet-name>
        <url-pattern>/products/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsController</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.user.GetAllProductsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productsController</servlet-name>
        <url-pattern>/products/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderQualifier</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.user.GetOrderDetailController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderQualifier</servlet-name>
        <url-pattern>/order/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>usersController</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.GetAllUsersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>usersController</servlet-name>
        <url-pattern>/users/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userInjector</servlet-name>
        <servlet-class>com.internet.shop.controllers.InjectDataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userInjector</servlet-name>
        <url-pattern>/inject</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.AddUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userRemover</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.DeleteUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userRemover</servlet-name>
        <url-pattern>/users/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>com.internet.shop.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsAdminController</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.admin.GetAllProductsAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productsAdminController</servlet-name>
        <url-pattern>/products/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsDeleteController</servlet-name>
        <servlet-class>com.internet.shop.controllers.product.admin.DeleteProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productsDeleteController</servlet-name>
        <url-pattern>/products/remove</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.internet.shop.controllers.user.LoginUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.internet.shop.web.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
